<Window x:Class="Oksana_Krasavica.Pages.AddEditPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oksana_Krasavica.Pages"
        mc:Ignorable="d"
        Title="AddEditPage" Height="450" Width="1000">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock>Имя</TextBlock>
            <TextBox Text="{Binding Name}" Width="200" TextWrapping="Wrap"></TextBox>
            <TextBlock>Описание</TextBlock>
            <TextBox Text="{Binding Description}" Width="600" TextWrapping="Wrap"></TextBox>
            <TextBlock>Цена</TextBlock>
            <TextBox Text="{Binding Cost}" Width="50"></TextBox>
            <TextBlock>Вес</TextBlock>
            <TextBox Text="{Binding Weight}" Width="50"></TextBox>
            <TextBlock>Ширина</TextBlock>
            <TextBox Text="{Binding Width}" Width="50"></TextBox>
            <TextBlock>Высота</TextBlock>
            <TextBox Text="{Binding Height}" Width="50"></TextBox>
        </StackPanel>
        
    </Grid>
</Window>
